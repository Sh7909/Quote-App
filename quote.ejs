<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="./style.css" type="text/css">
    <title>Home</title>
</head>

<body>

    <section>
        <div id="navbar" class="grid-container">
            <nav>
                <ul>
                    <a href="/posted_quotes">
                        <li class="grid-item">Quotes</li>
                    </a>
                    <a href="/posted_quotes">
                        <li class="grid-item">Quotes</li>
                    </a>
                    <a href="/quote">
                        <li class="grid-item">Create</li>
                    </a>
                    <a href="/logout">
                        <li class="grid-item">Logout</li>
                    </a>

                </ul>
            </nav>
        </div>
    </section>
    <section id="container">
        <div class="post-container">
            <% quotedata.forEach(post=> { %>
            
                <div class="post" style="background-color:<%=post.color %>">
                
                        <p id="show_contents">
                            <%= post.post %>
                        </p>
                        <div id="post_footer">
                            <div id="time_container">
                                <div id="time"><span class="material-symbols-outlined">
                                        schedule
                                    </span></div>
                                <div id="show_date"><span>
                                        <%=post.date%>
                                    </span></div>
                            </div>
                            <div id="like_container">
                                <div class="like-icon">
                                    <a href="#" class="fav"><span class="material-symbols-outlined">favorite</span></a>
                                </div>
                                <div class="like-display">
                                    <span class="show_counts"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
        </div>
    </section>
    <script src="/js/abc.js" type="text/javascript"></script>
</body>